<ResourceDictionary
    x:Class="AlternateRowColorSample.LightTheme"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="RowColor">Gray</Color>
    <Color x:Key="AlternativeRowColor">LightGray</Color>

    <Style x:Key="AlternativeRowStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource AlternativeRowColor}" />
    </Style>

    <Style x:Key="RowStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource RowColor}" />
    </Style>

    <Style x:Key="TextRowStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource AlternativeRowColor}" />
    </Style>

    <Style x:Key="AlternativeTextRowStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource RowColor}" />
    </Style>

</ResourceDictionary>